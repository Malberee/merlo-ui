{
  "name": "merlo-ui",
  "version": "1.1.12",
  "description": "Beautiful React Native UI library",
  "main": "./lib/module/index.js",
  "types": "./lib/module/index.d.ts",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./lib/module/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./plugin": {
      "types": "./lib/commonjs/plugin.d.ts",
      "default": "./lib/commonjs/plugin.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "plugin": [
        "lib/commonjs/plugin.d.ts"
      ]
    }
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "example": "yarn workspace merlo-ui-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "tsc --project tsconfig-esm.build.json && tsc --project tsconfig-cjs.build.json && yarn prepare:aliases",
    "prepare:aliases": "tsc-alias -p tsconfig-esm.build.json && tsc-alias -p tsconfig-cjs.build.json",
    "release": "release-it --only-version"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "react native ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Malberee/merlo-ui.git"
  },
  "author": "Malberee <pavellyalkov45@gmail.com> (https://github.com/Malberee)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Malberee/merlo-ui/issues"
  },
  "homepage": "https://github.com/Malberee/merlo-ui#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@react-aria/label": "^3.7.18",
    "@react-aria/progress": "^3.4.23",
    "@react-aria/utils": "^3.22.0",
    "@react-native-aria/button": "^0.2.10",
    "@react-native-aria/checkbox": "^0.2.10",
    "@react-native-aria/radio": "^0.2.13",
    "@react-native-aria/slider": "^0.2.12",
    "@react-native-aria/switch": "^0.2.4",
    "@react-stately/slider": "^3.6.4",
    "@react-stately/toggle": "^3.8.4",
    "clsx": "^2.1.1",
    "color": "^5.0.0",
    "color2k": "^2.0.3",
    "deepmerge": "^4.3.1",
    "flat": "^6.0.1",
    "lodash.foreach": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.kebabcase": "^4.1.1",
    "lodash.mapkeys": "^4.6.0",
    "lodash.omit": "^4.5.0",
    "tailwind-merge": "2.5.4",
    "tailwind-variants": "^1.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/babel-preset": "0.78.2",
    "@react-native/eslint-config": "^0.78.0",
    "@react-types/checkbox": "^3.9.4",
    "@react-types/progress": "^3.5.12",
    "@react-types/textfield": "^3.12.2",
    "@release-it/conventional-changelog": "^9.0.2",
    "@testing-library/react-native": "^13.2.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/color": "^4.2.0",
    "@types/jest": "^29.5.5",
    "@types/lodash.foreach": "^4.5.9",
    "@types/lodash.get": "^4.4.9",
    "@types/lodash.kebabcase": "^4.1.9",
    "@types/lodash.mapkeys": "^4.6.9",
    "@types/lodash.omit": "^4.5.9",
    "@types/react": "^18.2.44",
    "@types/react-test-renderer": "19.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "commitlint": "^19.6.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "nativewind": "^4.1.23",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "19.0.0",
    "react-dom": "^19.1.0",
    "react-native": "0.79.2",
    "react-native-builder-bob": "^0.40.11",
    "react-native-reanimated": "3.16.2",
    "react-native-svg": "^15.12.0",
    "react-test-renderer": "19.0.0",
    "release-it": "^17.10.0",
    "tailwindcss": "^3.4.17",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "nativewind": ">=4",
    "react": "*",
    "react-native": "*",
    "react-native-reanimated": ">=3",
    "react-native-svg": ">=15",
    "tailwindcss": ">=3"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|react-native-reanimated|flat|react-native-css-interop)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "create-react-native-library": {
    "languages": "js",
    "type": "library",
    "version": "0.50.3"
  }
}
